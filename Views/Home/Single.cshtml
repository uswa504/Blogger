@model Blogger.Models.Article        
<div class="h-top" id="home">
		   <div class="top-header">
				  <ul class="cl-effect-16 top-nag">
						<li><a href="/Home/Logout" data-hover="LOGOUT">LOGOUT</a></li>
					</ul>
					<div class="search-box">
					    <div class="b-search">
								<form>
										<input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
										<input type="submit" value="">
								</form>
							</div>
						</div>

					<div class="clearfix"></div>
				</div>
       </div>
	<div class="full">
			<div class="col-md-3 top-nav sing-page">
				     <div class="logo">
						<a href="index.html"><h1>Blogger</h1></a>
					</div>
                     <div class="top-menu">
                         <span class="menu"> </span>
                         <ul class="cl-effect-16">
                             <li><a href="/Home/New" data-hover="Write Article">Write Article</a></li>
                             <li><a href="/Home/Index2" data-hover="Home">Home</a></li>
                             <li><a href="/Home/Favorites" data-hover="Favorites">Favorites</a></li>
                             <li><a href="/Home/MyArticles" data-hover="My Articles">My Articles</a></li>
                         </ul>
                         <!-- script-for-nav -->
                         <script>
                             $("span.menu").click(function () {
                                 $(".top-menu ul").slideToggle(300, function () {
                                     // Animation complete.
                                 });
                             });
                         </script>
                         <!-- script-for-nav -->
                     </div>
			</div>
		<div class="col-md-9 main">
		<!--banner-section-->
		<div class="banner-section">
		   <h3 class="tittle">Article <i class="glyphicon glyphicon-file"></i></h3>
			<div class="single">
			    <div class="b-bottom"> 
			      <h5 class="top"><a href="#">@Model.article_title</a></h5>
				   <p class="sub">@Model.article_body</p>
			      <p>Posted On @Model.article_publishDate</p>
				</div>
			 </div>
				<div class="clearfix"></div>
			</div>
            </div>
			<!--//banner-->
			<!--//banner-section-->
			<div class="banner-right-text">
						<script type="text/javascript">
									$(document).ready(function() {
										$().UItoTop({ easingType: 'easeOutQuart' });
										
									});
								</script>
		<a href="#home" id="toTop" class="scroll" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>

            </div>