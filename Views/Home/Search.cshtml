<div>
    <div class="h-top" id="home">
        <div class="top-header">
            <ul class="cl-effect-16 top-nag">
                <li><a href="/Home/Logout" data-hover="LOGOUT">LOGOUT</a></li>
            </ul>
            <div class="search-box">
                <div class="b-search">
                    <form action= "/Home/Search">
                        <input type="text" value="Search" name="query" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                        <input type="submit" value="">
                    </form>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="full">
        <div class="col-md-3 top-nav">
            <div class="logo">
                <a href="#"><h1>Blogger</h1></a>
            </div>
            <div class="top-menu">
                <span class="menu"> </span>

                <ul class="cl-effect-16">
                    <li><a href="/Home/New" data-hover="Write Article">Write Article</a></li>
                    <li><a href="/Home/Index2" data-hover="Home">Home</a></li>
                    <li><a href="/Home/Favorites" data-hover="Favorites">Favorites</a></li>
                    <li><a href="/Home/MyArticles" data-hover="My Articles">My Articles</a></li>
                </ul>
                <!-- script-for-nav -->
                <script>
                    $("span.menu").click(function () {
                        $(".top-menu ul").slideToggle(300, function () {
                            // Animation complete.
                        });
                    });
                </script>
                <!-- script-for-nav -->
            </div>
        </div>
        <!--banner-section-->
        <div class="col-md-9 main" style="padding-left:20px">
            <h1 class="tittle reg">Search Results</h1>
            <br />
            <div class="row" style="padding-left:7px">
                @foreach (var s in Model)
                {
                    <div class="col-md-4 top-text">
                        <h5 class="top"><a href="/Home/Single/@s.article_id">@s.article_title</a></h5>
                        <p>@s.article_body.Substring(0, 300)</p>
                        <p>On @s.article_publishDate<a class="span_link" href="/Home/AddToFavs/@s.article_id"><span class="glyphicon glyphicon-heart-empty"></span></a><a class="span_link" href="/Home/Single/@s.article_id"><span class="glyphicon glyphicon-circle-arrow-right"></span></a></p>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"> </div>
        <a href="#home" id="toTop" class="scroll" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
    </div>
</div>
